extends ../layout

block content
  h1= title
  .card.mb-4.card-body.align-items-center
    h5.card-title.mb-3 Are you sure you want to delete this account?
    p #[strong #{account.accountName}]
    p This account will be deleted immediately. You can't undo this action.

    form(method='POST' action='')
        .form-group
        input#id.form-control(type='hidden',name='id', required='true', value=account._id )

        button.btn.btn-primary(type='submit') Delete