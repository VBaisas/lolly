extends layout

block content
  h1.mb-4 Overview
  .card.col-md-4.mb-5.card-body
    h5.card-title.mb-4 Accounts
    table.table
      thead.thead-light
        tr
          th(colspan='2') Checking accounts
      tbody
        tr
          td.col-md-9 ScotiaBank
          td $200

    table.table
      thead.thead-light
        tr
          th(colspan='2') Savings accounts
      tbody
        tr
          td.col-md-9 ScotiaBank
          td $2000
    
    table.table
      thead.thead-light
        tr
          th(colspan='2') Cash
      tbody
        tr
          td.col-md-9 Tips
          td $300

    table.table
      thead.thead-light
        tr
          th(colspan='2') Credit Cards
      tbody
        tr
          td.col-md-9 BMO
          td $-100

    table.table
      thead.thead-light
        tr
          th(colspan='2') Loans
      tbody
        tr
          td.col-md-9 Student Loan
          td $-5000

    table.table
      thead.thead-light
        tr
          th(colspan='2') Investment Accounts
      //tbody
        each account in accounts
          tr
            td= account.name
            td= account.balance

    a.btn.btn-outline-primary.mb-3(href="/manage_accounts") Manage accounts

        
